{
  "name": "information-flow-tooling",
  "version": "0.0.1",
  "description": "CLI tool for analyzing and visualizing Information Flow models",
  "main": "dist/index.js",
  "bin": {
    "ift": "dist/index.js"
  },
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
