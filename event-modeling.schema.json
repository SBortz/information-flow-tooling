{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://event-modeling.org/schema/v1",
  "title": "Event Modeling File Format",
  "description": "A human-readable format for describing event-driven systems using the Event Modeling methodology. The order in the timeline determines the temporal sequence.",
  "type": "object",
  
  "required": ["name", "timeline"],
  
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to the JSON schema"
    },
    "name": {
      "type": "string",
      "description": "Name of the modeled system"
    },
    "description": {
      "type": "string",
      "description": "Description of the system"
    },
    "version": {
      "type": "string",
      "description": "Version of the model",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    
    "timeline": {
      "type": "array",
      "description": "The chronologically ordered sequence. The order in the array determines the position on the timeline from left to right.",
      "items": {
        "type": "object",
        "required": ["type", "name", "tick"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["event", "stateview", "actor", "command"]
          },
          "name": {
            "type": "string"
          },
          "tick": {
            "type": "integer",
            "description": "Logical timestamp (Lamport clock) for ordering"
          },
          "producedBy": {
            "type": "string",
            "description": "For events: reference to the command that produced this event (format: 'CommandName-Tick')"
          },
          "externalSource": {
            "type": "string",
            "description": "For external events: the source (e.g. 'Carrier Webhook')"
          },
          "subscribesTo": {
            "type": "array",
            "description": "For state views: names of the events that this state view subscribes to",
            "items": { "type": "string" }
          },
          "readsView": {
            "type": "string",
            "description": "For actors: name of the state view that the actor reads"
          },
          "sendsCommand": {
            "type": "string",
            "description": "For actors: name of the command that the actor sends"
          },
          "example": {
            "description": "Example data"
          }
        },
        "allOf": [
          {
            "if": { "properties": { "type": { "const": "event" } } },
            "then": { "description": "An event represents something that has happened." }
          },
          {
            "if": { "properties": { "type": { "const": "stateview" } } },
            "then": { "required": ["subscribesTo"] }
          },
          {
            "if": { "properties": { "type": { "const": "actor" } } },
            "then": { "required": ["readsView", "sendsCommand"] }
          },
          {
            "if": { "properties": { "type": { "const": "command" } } },
            "then": { "description": "A command represents an intent to do something." }
          }
        ]
      }
    }
  }
}
