{
  "name": "giraflow",
  "version": "0.0.0",
  "description": "Giraflow â€“ live preview server for .giraflow.json models with hot reload",
  "main": "dist/server/server/index.js",
  "bin": {
    "giraflow": "dist/server/server/index.js"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run bundle:wired && vite build && tsc -p tsconfig.server.json && tsx scripts/copy-server-assets.ts",
    "build:public": "npm run copy-assets && npm run bundle:wired && vite build --mode public",
    "bundle:wired": "esbuild node_modules/wired-elements/lib/wired-elements.js --bundle --format=esm --outfile=public/lib/wired-elements.js",
    "copy-assets": "tsx scripts/copy-assets.ts",
    "dev": "npm run copy-assets && tsx src/dev-cli.ts",
    "dev:public": "npm run copy-assets && vite --mode public --port 4321",
    "dev:server": "tsx watch src/server/index.ts",
    "start": "node dist/server/server/index.js",
    "preview:public": "vite preview --mode public --port 4321",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "giraflow",
    "event-modeling",
    "information-flow",
    "live-preview",
    "hot-reload"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SBortz/giraflow"
  },
  "author": "Sebastian Bortz <sebastianbortz@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-json": "^6.0.2",
    "@inquirer/prompts": "^7.2.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "codemirror": "^6.0.2",
    "commander": "^12.1.0",
    "highlight.js": "^11.11.1",
    "jszip": "^3.10.1",
    "open": "^10.1.0",
    "pptxgenjs": "^4.0.1",
    "wired-elements": "^3.0.0-rc.6"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/node": "^22.10.0",
    "esbuild": "^0.27.2",
    "svelte": "^5.48.0",
    "svelte-check": "^4.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^7.3.1"
  }
}
