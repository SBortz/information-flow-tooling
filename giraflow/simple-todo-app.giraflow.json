  "specifications": [
    {
      "name": "Todos",
      "type": "state",
      "scenarios": [
        {
          "name": "Empty state with no events",
          "given": [],
          "then": []
        },
        {
          "name": "Added items appear as open",
          "given": [
            {
              "event": "TodoAdded",
              "data": { "todoId": "t-1", "title": "Buy milk" }
            }
          ],
          "then": [
            { "id": "t-1", "title": "Buy milk", "done": false }
          ]
        },
        {
          "name": "Done items are marked",
          "given": [
            {
              "event": "TodoAdded",
              "data": { "todoId": "t-1", "title": "Buy milk" }
            },
            {
              "event": "TodoDone",
              "data": { "todoId": "t-1" }
            }
          ],
          "then": [
            { "id": "t-1", "title": "Buy milk", "done": true }
          ]
        }
      ]
    },
    {
      "name": "AddTodo",
      "type": "command",
      "scenarios": [
        {
          "name": "Successfully add a valid todo",
          "given": [],
          "when": { "title": "Buy milk" },
          "then": {
            "produces": [
              {
                "event": "TodoAdded",
                "data": { "todoId": "t-1", "title": "Buy milk" }
              }
            ]
          }
        },
        {
          "name": "Reject empty title",
          "given": [],
          "when": { "title": "" },
          "then": {
            "fails": "Title must not be empty"
          }
        },
        {
          "name": "Reject when max items reached",
          "given": [
            { "event": "TodoAdded", "data": { "todoId": "t-1", "title": "Item 1" } },
            { "event": "TodoAdded", "data": { "todoId": "t-2", "title": "Item 2" } },
            { "event": "TodoAdded", "data": { "todoId": "t-3", "title": "Item 3" } },
            { "event": "TodoAdded", "data": { "todoId": "t-4", "title": "Item 4" } },
            { "event": "TodoAdded", "data": { "todoId": "t-5", "title": "Item 5" } },
            { "event": "TodoAdded", "data": { "todoId": "t-6", "title": "Item 6" } },
            { "event": "TodoAdded", "data": { "todoId": "t-7", "title": "Item 7" } },
            { "event": "TodoAdded", "data": { "todoId": "t-8", "title": "Item 8" } },
            { "event": "TodoAdded", "data": { "todoId": "t-9", "title": "Item 9" } },
            { "event": "TodoAdded", "data": { "todoId": "t-10", "title": "Item 10" } }
          ],
          "when": { "title": "Item 11" },
          "then": {
            "fails": "Cannot have more than 10 todos"
          }
        }
      ]
    },
    {
      "name": "FinishTodo",
      "type": "command",
      "scenarios": [
        {
          "name": "Successfully mark as done",
          "given": [
            {
              "event": "TodoAdded",
              "data": { "todoId": "t-1", "title": "Buy milk" }
            }
          ],
          "when": { "todoId": "t-1" },
          "then": {
            "produces": [
              {
                "event": "TodoDone",
                "data": { "todoId": "t-1" }
              }
            ]
          }
        },
        {
          "name": "Reject when todo not found",
          "given": [],
          "when": { "todoId": "non-existent" },
          "then": {
            "fails": "Todo not found"
          }
        },
        {
          "name": "Reject when already done",
          "given": [
            {
              "event": "TodoAdded",
              "data": { "todoId": "t-1", "title": "Buy milk" }
            },
            {
              "event": "TodoDone",
              "data": { "todoId": "t-1" }
            }
          ],
          "when": { "todoId": "t-1" },
          "then": {
            "fails": "Todo is already done"
          }
        }
      ]
    },
    {
      "name": "ResetAllTodos",
      "type": "command",
      "scenarios": [
        {
          "name": "Successfully reset all todos",
          "given": [
            {
              "event": "TodoAdded",
              "data": { "todoId": "t-1", "title": "Buy milk" }
            },
            {
              "event": "TodoDone",
              "data": { "todoId": "t-1" }
            }
          ],
          "when": {},
          "then": {
            "produces": [
              {
                "event": "AllTodosReset",
                "data": {}
              }
            ]
          }
        },
        {
          "name": "Reject when no todos exist",
          "given": [],
          "when": {},
          "then": {
            "fails": "No todos to reset"
          }
        }
      ]
    },
    {
      "name": "FinishAllTodos",
      "type": "command",
      "scenarios": [
        {
          "name": "Successfully finish all todos",
          "given": [
            {
              "event": "TodoAdded",
              "data": { "todoId": "t-1", "title": "Buy milk" }
            },
            {
              "event": "TodoAdded",
              "data": { "todoId": "t-2", "title": "Walk dog" }
            }
          ],
          "when": {},
          "then": {
            "produces": [
              {
                "event": "AllTodosFinished",
                "data": {}
              }
            ]
          }
        },
        {
          "name": "Reject when no open todos",
          "given": [
            {
              "event": "TodoAdded",
              "data": { "todoId": "t-1", "title": "Buy milk" }
            },
            {
              "event": "TodoDone",
              "data": { "todoId": "t-1" }
            }
          ],
          "when": {},
          "then": {
            "fails": "No open todos to finish"
          }
        }
      ]
    }
  ]
}
